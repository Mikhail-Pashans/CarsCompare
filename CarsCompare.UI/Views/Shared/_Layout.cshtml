<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CarsCompare</title>
    @Styles.Render("~/Content/css", "~/Content/bootstrap")
    @Scripts.Render("~/bundles/modernizr", "~/bundles/jquery", "~/bundles/bootstrap")
</head>
<body>
    <div class="navbar header navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CarsCompare", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Главная", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content mt-15">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy;&nbsp;@DateTime.Now.Year&nbsp;&ndash;&nbsp;CarsCompare</p>
        </footer>
    </div>    
    @RenderSection("scripts", required: false)
</body>
</html>