@{
    ViewBag.Title = "CarsCompare - Главная страница";
}

@Scripts.Render("~/bundles/angular", "~/bundles/angular-ui")

<div class="jumbotron">
    <div data-ng-app="carsCompareApp" data-ng-controller="compareCtrl">
        <div class="row">
            <div class="col-md-4">
                <button type="button" class="btn lg btn-primary" data-ng-click="open()">Выбрать автомобиль для сравнения</button>
            </div>
        </div>
        <div class="row" data-ng-show="!!result">
            <h1>{{ result.brand.name }}</h1>
            <h1>{{ result.model.name }}</h1>
            <h1>{{ result.version.name }}</h1>
            <h1>{{ result.modify.name }}</h1>
            <h1>{{ (result.modify.yearFrom | formatBigYear) + ' &ndash; ' + (result.modify.yearTo | formatBigYear) }}</h1>
        </div>
    </div>
</div>

